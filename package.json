{
  "name": "cssnano-core",
  "private": true,
  "scripts": {
    "lint": "pnpm types && eslint . --cache",
    "fixlint": "prettier --write . && pnpm lint -- --fix",
    "build:integration": "node ./util/buildFrameworks.mjs",
    "pretest": "pnpm lint",
    "test:only": "node --test",
    "test:coverage": "c8 pnpm test:only",
    "test": "pnpm test:coverage",
    "types": "tsc -b",
    "all-publish": "pnpm changeset publish"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": "^18 || ^20 || >=22"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@types/node": "^20.14.2",
    "c8": "^9.1.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.4.0",
    "postcss": "^8.4.38",
    "postcss-font-magician": "^4.0.0",
    "prettier": "^3.3.1",
    "typescript": "~5.4.5"
  },
  "browserslist": {
    "production": [
      "IE 11 and last 2 versions"
    ]
  }
}
