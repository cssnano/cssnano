{
  "name": "cssnano-core",
  "private": true,
  "scripts": {
    "lint": "pnpm types && eslint . --cache",
    "fixlint": "prettier --write . && pnpm lint -- --fix",
    "build:integration": "node ./util/buildFrameworks.mjs",
    "pretest": "pnpm lint",
    "test:only": "node --test",
    "test:coverage": "c8 pnpm test:only",
    "test": "pnpm test:coverage",
    "types": "tsc -b",
    "all-publish": "pnpm changeset publish"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": "^18 || ^20 || >=22"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.1.0",
    "c8": "^10.1.3",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "postcss-font-magician": "^4.0.0",
    "prettier": "^3.6.2",
    "typescript": "~5.9.2"
  },
  "browserslist": {
    "production": [
      "IE 11 and last 2 versions"
    ]
  },
  "packageManager": "pnpm@10.12.4"
}
