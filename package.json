{
  "name": "cssnano-core",
  "private": true,
  "scripts": {
    "lint": "pnpm types && eslint . --cache --ignore-path .gitignore --ext .js,.mjs",
    "fixlint": "prettier --write . && pnpm lint -- --fix",
    "build:integration": "node ./util/buildFrameworks.mjs",
    "pretest": "pnpm lint",
    "test:only": "uvu packages \"test.*\\.js$\"",
    "test:coverage": "c8 pnpm test:only",
    "test": "pnpm test:coverage",
    "test:helpers": "uvu packages \"test.*\\.mjs$\"",
    "types": "tsc -b",
    "all-publish": "pnpm changeset publish"
  },
  "workspaces": [
    "./packages/*"
  ],
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.10.4",
    "c8": "^8.0.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "postcss": "^8.4.31",
    "postcss-font-magician": "^3.0.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.3",
    "uvu": "^0.5.6"
  },
  "browserslist": {
    "production": [
      "IE 11 and last 2 versions"
    ],
    "chrome58": [
      "Chrome 58"
    ],
    "chrome62": [
      "Chrome 62"
    ],
    "edge15": [
      "Edge 15"
    ],
    "ie6": [
      "IE 6"
    ],
    "ie7": [
      "IE 7"
    ],
    "ie8": [
      "IE 8"
    ],
    "ie9": [
      "IE 9"
    ],
    "ie11": [
      "IE 11"
    ],
    "not ie": [
      "defaults",
      "not ie <=11"
    ],
    "opera9": [
      "Opera 9"
    ],
    "firefox2": [
      "Firefox 2"
    ],
    "safari5": [
      "Safari < 5"
    ]
  }
}
