{
  "name": "cssnano",
  "private": true,
  "scripts": {
    "all-contributors": "all-contributors add",
    "lint": "eslint . --cache --ignore-path .gitignore",
    "fixlint": "yarn lint -- --fix",
    "postinstall": "lerna bootstrap",
    "build:packages": "babel-node ./util/buildPackages.js",
    "build:metadata": "babel-node ./util/buildMetadata.js",
    "build:site": "remark site/content/**/*.md -o && yarn build:metadata && babel-node ./util/buildSiteMarkdown.js && cd site && yarn build",
    "build:integration": "cross-env BABEL_ENV=test babel-node ./util/buildFrameworks.js",
    "pretest": "yarn lint",
    "test:only": "cross-env BABEL_ENV=test ava",
    "test:coverage": "cross-env BABEL_ENV=test nyc --reporter=lcov --reporter=text ava",
    "test": "yarn test:coverage",
    "deploy": "gh-pages -t -d site/dist",
    "publish": "lerna publish"
  },
  "engines": {
    "node": ">=6.9.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "all-contributors-cli": "^5.11.0",
    "ava": "^1.4.1",
    "babel-eslint": "^10.0.1",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "browserslist": "^4.6.0",
    "camelcase": "^5.3.1",
    "cross-env": "^5.1.6",
    "dox": "^0.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "fs-extra": "^8.0.1",
    "get-pkg-repo": "^4.1.0",
    "gh-pages": "^1.2.0",
    "glob": "^7.1.4",
    "lerna": "3.3.0",
    "mdast-util-heading-range": "^2.1.2",
    "nyc": "^14.1.1",
    "postcss": "^7.0.16",
    "prettier": "^1.17.1",
    "remark": "^10.0.1",
    "remark-behead": "^2.2.1",
    "remark-bookmarks": "^2.1.0",
    "remark-cli": "^6.0.1",
    "remark-frontmatter": "^1.3.1",
    "remark-github": "^7.0.6",
    "remark-heading-gap": "^3.1.0",
    "remark-html": "^9.0.0",
    "remark-license": "^5.0.1",
    "remark-toc": "^5.1.1",
    "stringify-object": "^3.3.0",
    "toml": "^3.0.0",
    "tomlify-j0.4": "^3.0.0",
    "unist-builder": "^1.0.4",
    "unist-util-remove": "^1.0.2"
  },
  "ava": {
    "files": [
      "packages/**/src/__tests__/**/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "**/__tests__",
      "**/dist",
      "util"
    ]
  },
  "browserslist": {
    "chrome58": [
      "Chrome 58"
    ],
    "edge15": [
      "Edge 15"
    ],
    "ie6": [
      "IE 6"
    ],
    "ie7": [
      "IE 7"
    ],
    "ie8": [
      "IE 8"
    ],
    "ie9": [
      "IE 9"
    ],
    "not ie": [
      "defaults",
      "not ie <=11"
    ],
    "opera9": [
      "Opera 9"
    ],
    "firefox2": [
      "Firefox 2"
    ],
    "safari5": [
      "Safari < 5"
    ]
  }
}
