{
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "extends": [
    "eslint:recommended",
    "plugin:prettier/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "rules": {
    "curly": "error",
    "dot-notation": "error",
    "eqeqeq": "error",
    "new-cap": "error",
    "no-alert": "error",
    "no-caller": "error",
    "no-eval": "error",
    "no-labels": "error",
    "no-lonely-if": "error",
    "no-new": "error",
    "no-proto": "error",
    "no-return-assign": "error",
    "no-self-compare": "error",
    "no-shadow": "error",
    "no-useless-call": "error",
    "no-var": "error",
    "no-void": "error",
    "no-warning-comments": "error",
    "radix": "error",
    "yoda": "error"
  },
  "overrides": [
    {
      "files": ["*.mjs"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
